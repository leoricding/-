/* pages/template/lession1-template.wxss */

.less-tmp-container{
  margin-top: 20rpx;
  margin-right: 20rpx;
  display: flex;
  flex-direction:row;
  /* flex-wrap: nowrap; */
  /* justify-content: left; */
}
/* 图片样式 */
.less-img-container{
  margin-left: 20rpx;
  margin-right: 20rpx;
  width: 350rpx;
  height: 200rpx;
  /* display: inline-block; */
}
.less-img{
  width: 100%;
  height: 100%;
}
.less-content-name{
  font-size: 0.8rem;
}

/* 动画样式 */
.less-online-animate{
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  margin-bottom: 20rpx;
  height: 26rpx;
}
.less-online-animate-0{
  width: 8rpx;
  height: 8rpx;
  background-color: rgb(0, 217, 255);
  margin-right: 4rpx;
  animation: animate-0 800ms infinite alternate;
}
.less-online-animate-1{
  width: 8rpx;
  height: 16rpx;
  background-color: rgb(0, 217, 255);
  margin-right: 4rpx;
  animation: animate-1 800ms infinite alternate;
}
.less-online-animate-2{
  width: 8rpx;
  height: 24rpx;
  background-color: rgb(0, 217, 255);
  margin-right: 4rpx;
  animation: animate-2 800ms infinite alternate;
}
.less-online-animate-3{
  width: 8rpx;
  height: 8rpx;
  background-color: rgb(0, 217, 255);
  margin-right: 4rpx;
  animation: animate-3 800ms infinite alternate;
}
.less-online-animate-4{
  font-size: 0.4rem;
  color:rgb(0, 217, 255);
  margin-right: 4rpx;
  margin-bottom: -4rpx;
}
@keyframes animate-0
{
from {height:8rpx;}
to {height:16rpx;}
}
@keyframes animate-1
{
from {height:16rpx;}
to {height:8rpx;}
}
@keyframes animate-2
{
from {height:24rpx;}
to {height:8rpx;}
}
@keyframes animate-3
{
from {height:8rpx;}
to {height:20rpx;}
}

/* 底部文字样式 */
.less-content-container{
  width: 50%;
  display: flex;
  flex-direction: column;
}
.less-content-name{
  margin-bottom: 20rpx;
}
.less-content-person{
  font-size: 0.6rem;
  color:grey;
}